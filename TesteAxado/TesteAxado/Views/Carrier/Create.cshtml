@model TesteAxado.Models.Carrier

@{
    ViewBag.Title = "Create carrier";
}

<h2>Create carrier</h2>

<form action="/Carrier/Create" method="post">
    @Html.ValidationSummary()

    <div class="row">
        <div class="col-md-8">
            <label for="txtName">Name*:</label>
            <input type="text" id="txtName" name="Name" value="@Model.Name" title="Carrier name" class="form-control" maxlength="500" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <label for="txtIdentifier">Identification number*:</label>
            <input type="text" id="txtIdentifier" name="Identifier" value="@Model.Identifier" title="Carrier identification number" class="form-control cnpj" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <label for="txtPhone">Phone number*:</label>
            <input type="tel" id="txtPhone" name="Phone" value="@Model.Phone" title="Carrier phone number" class="form-control tel" maxlength="50" />
        </div>
        <div class="col-md-8">
            <label for="txtEmail">Email*:</label>
            <input type="email" id="txtEmail" name="Email" value="@Model.Email" title="Carrier email" class="form-control" maxlength="250" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <label for="txtAddress">Address:</label>
            <input type="text" id="txtAddress" name="Address" value="@Model.Address" title="Carrier address" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <label for="txtNumber">Number:</label>
            <input type="number" id="txtNumber" name="Number" value="@Model.Number" title="Carrier number" class="form-control num" />
        </div>
        <div class="col-md-6">
            <label for="txtPostalCode">Postal Code:</label>
            <input type="text" id="txtPostalCode" name="PostalCode" value="@Model.PostalCode" title="Carrier postal code" class="form-control cep" maxlength="9" />
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary" title="Save new carrier">Save</button>
    <a class="btn btn-default" title="Cancel save" href="/Carrier/Index" >Cancel</a>
</form>
